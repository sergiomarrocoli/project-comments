<%= form_with model: project, data: { controller: 'projects--status-form', action: 'input->projects--status-form#submit' } do |form| %>
  <div class="flex flex-col">
    <%= form.label :status, 'Status:', class: "block font-medium mb-1" %>
    <%= form.select :status, options_for_select(project_status_options, project.status),
        {}, { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" } %>
  </div>
<% end %>